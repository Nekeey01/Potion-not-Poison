            $tmp = count_items(items_for_code)
            for key in tmp:
                text "%s x %d"%(key,tmp[key]) align(0.5,0.5)
            text "\nПлата - [zp] монет" align(0.5,0.5)

    grid 4 4:
        align (0.79,0.5)
        spacing 2
        for i in board:

            if i == EMPTY:
